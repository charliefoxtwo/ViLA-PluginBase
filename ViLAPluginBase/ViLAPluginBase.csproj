<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>ViLA.PluginBase</RootNamespace>
        <Nullable>enable</Nullable>
        <PackageId>ViLA.PluginBase</PackageId>
        <Title>ViLA Plugin Base</Title>
        <Description>Contains base types for use by ViLA plugins.</Description>
        <RepositoryType>git</RepositoryType>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageProjectUrl>https://github.com/charliefoxtwo/ViLA-PluginBase.git</PackageProjectUrl>
        <PackageLicenseUrl>https://www.gnu.org/licenses/gpl-3.0.en.html</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/charliefoxtwo/ViLA-PluginBase.git</RepositoryUrl>
        <PackageIconUrl>https://raw.githubusercontent.com/charliefoxtwo/Virpil-Communicator-PluginBase/main/VirpilCommunicatorPluginBase/resources/rounded-plug.png</PackageIconUrl>
        <PackageIcon>rounded-plug.png</PackageIcon>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <Authors>charliefoxtwo</Authors>
        <PackageTags>virpil</PackageTags>
        <PackageReleaseNotes>First official release of the ViLA plugin base!</PackageReleaseNotes>
        <Product>ViLA Plugin Base</Product>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="resources/rounded-plug.png" Pack="true" PackagePath="" />
    </ItemGroup>

</Project>
